@{
    ViewBag.Title = "ViewTasks";
}
@model List<DONATE_TO_SAVE.Models.Task>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title></title>

</head>
<body>
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Messaging
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Home</a>
                    </li>
                    <li class="active">Tasks</li>
                </ol>
            </div>
        </div>
        @*<div>
            @if (Session["uname"] != null)
            {
                <form class="navbar-form navbar-center" action="/Search/messageSearchFunction" role="search">
                    <div class="form-group">
                        <input type="text" maxlength="100" size="139" name="search" required="" class="form-control" placeholder="Search Your Tasks Here" />
                    </div>
                    <input type="submit" class="btn btn-default btn-info" value="Search" />
                </form>
            }
        </div>*@
        <hr />
        <!-- /.row -->
        <!-- Intro Content -->
        <h1>Tasks</h1>
        @foreach (var m in Model)
        {
            if (m.User_ID == (int)Session["userID"] || (string)Session["uname"] == "admin")
            {
                <hr />
                <div class="row">
                    <div class="col-md-2">
                        <img width="140" height="140" class="img-responsive img-rounded" src="@m.User.Image" alt="">
                    </div>
                    <div class="col-md-9">
                        <h3>
                            @m.User.Name <small class="pull-right"> Posted on: @m.Date</small><br />

                            @if (m.Status != "done")
                            {
                                <a class="btn btn-sm btn-success pull-right" style="margin-right: 1%" href="~/Contact/changeTaskStatus?id=@m.Id">Done ?</a>
                            }
                            
                            @if ((string)Session["uname"] == "admin")
                            {
                                <a class="btn btn-sm btn-danger pull-right" style="margin-right: 1%; margin-left:3%" href="~/Contact/DeleteTask?id=@m.Id">Reomve</a>
                            }
                        </h3>
                        <strong>Task: </strong>@m.Task1
                        @if(m.Status != "done")
                        {   
                            <p style="margin-left:30% ;margin-top:3% ; background-color:bisque"><strong>Status: </strong>Not Done Yet</p>
                        }
                        else
                        {   
                            <p style="margin-left:30% ;margin-top:3% ; background-color:lightgreen"><strong>Status: </strong>Done</p>
                        }
                        </div>
                    <hr />
                </div>
            }

        }
        <br />
        <hr />
        <br />
        <br />
    </div>
</body>
</html>
